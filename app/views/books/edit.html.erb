<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<div class = "field">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
</div>
<div class = "field">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>
</div>

  <%= f.submit 'Update Book' %>

<% end %>
<%= link_to "show", book_path(@book.id) %>
|
<a class="back" href="/books">Back</a>